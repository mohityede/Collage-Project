<%- include('../partial/header') -%>

    <link rel="stylesheet" href="css/user/profile.css">
    <div class="container">
        <div class="main-body">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://thumbs.dreamstime.com/z/indian-farmer-cartoon-character-vector-ceremony-cleaned-clipart-consume-dance-dancer-day-dip-dress-each-early-eventually-excellent-164417070.jpg" alt="Admin"
                                    class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h2>
                                        <%= cUser.name %>
                                    </h2>
                                    <% if(currUser){ %>
                                        <% if(currUser==="Farmer"){ %>
                                            <a href="/products/myProducts/<%= cUser.id %>">
                                                <button class="btn btn-primary">My Products</button>
                                            </a><hr>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Full Name</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.name %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.email %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Role</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.role %>
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Mobile</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.phone %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Local Address</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.location.local %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Districts</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.location.district %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">State</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.location.state %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">PIN</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.location.pin %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Oraganization</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.org %>
                                </div>
                            </div>
                            <hr>
                            <% if(cUser.role == 'Farmer'){ %>
                            <h2 style="font-weight: bold;">Bank Details</h2>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Name of the Bank</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.bankDetails.bankName %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Account Number</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.bankDetails.accNum %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">IFSC</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.bankDetails.ifsc %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Bank Branch</p>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= cUser.bankDetails.branch %>
                                </div>
                            </div>
                            <hr>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partial/footer') -%>