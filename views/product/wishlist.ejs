<%- include('../partial/header') -%>

<link rel="stylesheet" href="/css/products/wishlist.css">

    <h1 style="text-align: center; font-size: 40px;">My Wishlist</h1>
  <div class="container-md cart">

    <table>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>

      <% for(let i=0;i<arr.length;i++){ %>
        <tr>
            <td>
              <div class="cart-info">
                <% if(arr[i].proImg===''){ %>
                  <img src="/img/account/logo.jpeg" alt="produt Img">
                <% }else{ %>
                  <img src="<%= arr[i].proImg %>" alt="produt Img">
                <% } %>
                <div>
                  <p><a style="font-size: 20px; color: black;" href="/product/details/<%= arr[i].proId %>"><%= arr[i].proName %></a> </p>
                  <br/>
                  <a href="/product/wishlist/remove/?userId=<%= currUser._id %>&proId=<%= arr[i].proId %>">remove</a>
                </div>
              </div>
            </td>
            <td><%= arr[i].proAvailable %></td>
            <td>â‚¹ <%= arr[i].proPrice %></td>
          </tr>
      <% } %>
    </table>

  </div>

  <%- include('../partial/footer') -%>