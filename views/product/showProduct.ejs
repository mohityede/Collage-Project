<%- include('../partial/header') -%>
<link rel="stylesheet" href="/css/products/show.css">
<!-- <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> -->

<!-- Product Details -->
<section class="section product-detail">
    <div class="details container-md">
      <div class="left">
        <div class="w3-content w3-display-container">
          <% if(pro.imgUrl.length==0){ %>
            <div class="w3-display-container mySlides">
              <img src="/img/account/logo.jpeg" style="width:100%">
            </div>
          <% }else{ %>
            <% for(let i=0;i<pro.imgUrl.length;i++){ %>
              <div class="w3-display-container mySlides">
                <img src="<%= pro.imgUrl[i] %>" style="width:100%">
              </div>
            <% } %>
          <% } %>


            <button class="w3-button w3-display-left w3-black" onclick="plusDivs(-1)">&#10094;</button>
            <button class="w3-button w3-display-right w3-black" onclick="plusDivs(1)">&#10095;</button>

            </div>

      </div>
      <div class="right">
        <span>Home/products</span>
        <h1><%= pro.name %></h1>
        <div class="price">Price: â‚¹ <%= pro.price %> /kg</div>
        <br>
        <div class="price">Available: <%= pro.available %>kg</div>


        <form class="form">
          <input type="text" placeholder="1">kg
          <a href="cart.html" class="addCart">Add to cart</a>
        </form>
        <h3>Product Detail</h3>
        <p><%= pro.details %></p>

          <span><b>Create Date:</b>  <%= pro.createDate %></span> <br>
          <span><b>Producer:</b> <a href="/farmer/profile/<%= produc._id %>"><%= produc.name %></a> </span><br>
          <span><b>status:</b>  Available</span>
      </div>
    </div>
  </section>
<script src="/js/products/show.js"></script>
<%- include('../partial/footer') -%>